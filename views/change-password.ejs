  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Drug Decider - Admin</title>
    <meta name="author" content="Drug Decider" />
    <meta name="description" content="Drug Decider Admin Console" />
    <meta name="keywords" content="keywords,here" />
    <link rel="stylesheet" href="change-password.css" />
    <link
      rel="shortcut icon"
      href="favicon.ico"
      type="image/vnd.microsoft.icon"
    />
  </head>

  <body>
    <div class="container">
      <div class="signinbox">
        <p id="title">Drug Decider Admin Portal</p>
        <form action="/changePassword" method="POST">
          <% if (messages.info_c) { %>
          <p id="err"><%= messages.info_c%></p>
          <% } %>
          <div class="prompt">
            <label form="password">Old Password</label>
            <input
              type="password"
              id="oldPassword"
              name="oldPassword"
              required
            />
          </div>
          <div class="prompt">
            <label form="password">New Password</label>
            <input
              type="password"
              id="newPassword"
              name="newPassword"
              required
            />
          </div>
          <div class="prompt">
            <label form="password">Confirm New Password</label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              required
            />
          </div>
          <button type="submit">Change</button>
        </form>
        <a href="/">Return</a>
      </div>
    </div>
  </body>
</html>
